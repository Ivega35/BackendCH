<section>
    <h1 class="text-center py-5">Todos los productos</h1>
    <div class="container">
        <div class="column">
            {{#each products}}
            <div class="row col-lg-12 d-flex align-items-center">
            <div class="col-lg-2 d-flex aling-items-center justify-content-center">
                <img src={{this.pid.thumbnail}} class="img-fluid rounded-start" alt={{this.pid.title}} style="height: 100px;">
            </div>
            <div class="card mb-3 col-lg-6" style="height: 70px">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card-body d-flex justify-content-around align-items-center">
                            <p class="fs-4 fw-bold">{{this.pid.title}}</p>
                            <p class="fs-5">Price: U$D{{this.pid.price}} </p>
                            <p class="fs-5">Unit/s: {{this.qty}} </p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>